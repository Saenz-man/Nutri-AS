generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserStatus {
  PENDING_PAYMENT
  ACTIVE
  TEST_USER
}

model User {
  id          String     @id @default(uuid())
  nombre      String
  apellido    String
  email       String     @unique
  password    String
  telefono    String
  carrera     String
